{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build linux-amd64",
            "type": "shell",
            "command": "GOOS=linux GOARCH=amd64 go build -o backend/build/linkerpod backend/main.go",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "test all",
            "type": "shell",
            "command": "go test ./...",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "build wasm",
            "type": "shell",
            "command": "GOOS=js GOARCH=wasm go build -o ../static/main.wasm",
            "options": {
                "cwd": "${workspaceRoot}/web/wasm"
            }
        }
    ]
}